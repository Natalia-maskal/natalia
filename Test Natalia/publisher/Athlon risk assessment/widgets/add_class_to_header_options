<script>
    (function(){
        const secondOpinion = jQuery('#is_second_opinion').val() === 'true';
        if(secondOpinion){
            jQuery('label[for="retryAutomaticAssessment"]').parent().css('display', 'none');
        } else {
            jQuery('#actionOptions').find('.radio-options').first().css('flex-wrap', 'nowrap');
        }
    })()
</script>