String xml = body.variables.MilesXmlCustomer.XML
def mainPhone = body.variables.ACCOUNT_MainPhone
def mainFax = body.variables.ACCOUNT_MainFax
XmlParser parser = new XmlParser(false, false)
Node node = parser.parseText(xml)

node.MWSCustomer.tradingName[0].value = body.variables.ACCOUNT_AccountName
node.MWSCustomer.vatNumber[0].value = body.variables.ACCOUNT_CustomText31
node.MWSCustomer.PrimaryContact.email[0].value = body.variables.ACCOUNT_CustomText34
node.MWSCustomer.PrimaryContact.PrimaryAddress.line1[0].value = body.variables.ACCOUNT_PrimaryShipToStreetAddress
node.MWSCustomer.PrimaryContact.PrimaryAddress.line2[0].value = body.variables.ACCOUNT_PrimaryShipToStreetAddress2
node.MWSCustomer.PrimaryContact.PrimaryAddress.city[0].value = body.variables.ACCOUNT_PrimaryShipToCity
node.MWSCustomer.PrimaryContact.PrimaryAddress.postalCode[0].value = body.variables.ACCOUNT_PrimaryShipToPostalCode
node.MWSCustomer.PrimaryContact.PrimaryAddress.state[0].value = body.variables.ACCOUNT_PrimaryShipToProvince
node.MWSCustomer.PrimaryContact.VisitAddress.line1[0].value = body.variables.ACCOUNT_PrimaryBillToStreetAddress
node.MWSCustomer.PrimaryContact.VisitAddress.line2[0].value = body.variables.ACCOUNT_PrimaryBillToStreetAddress2
node.MWSCustomer.PrimaryContact.VisitAddress.city[0].value = body.variables.ACCOUNT_PrimaryBillToCity
node.MWSCustomer.PrimaryContact.VisitAddress.postalCode[0].value = body.variables.ACCOUNT_PrimaryBillToPostalCode
node.MWSCustomer.PrimaryContact.VisitAddress.state[0].value = body.variables.ACCOUNT_PrimaryBillToProvince
node.MWSCustomer.PrimaryContact.PrimaryPhone.zonalNr[0].value = mainPhone.substring(0,3)
node.MWSCustomer.PrimaryContact.PrimaryPhone.localNr[0].value = mainPhone.substring(4)
node.MWSCustomer.PrimaryContact.Fax.zonalNr[0].value = mainFax.substring(0,3)
node.MWSCustomer.PrimaryContact.Fax.localNr[0].value = mainFax.substring(4)

StringWriter writer = new StringWriter()
XmlNodePrinter xmlNodePrinter = new XmlNodePrinter(new PrintWriter(writer), '') { 
    void printLineEnd(){} 
}
xmlNodePrinter.setPreserveWhitespace(false)
xmlNodePrinter.print(node)

body.dataTransformed = writer.toString()
return body